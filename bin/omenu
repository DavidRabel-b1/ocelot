#!/bin/bash
#
# oterminal opens a terminal with options suitable for ocelot
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

SCALE=1
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$scale" ]] ; then
        SCALE="$scale"
    fi
else
    echo "~/.ocelotrc does not exist"
fi

pixelsize=$(( 10*SCALE ))
dmenu_run -b -nb "#292929" -nf "#bbbbbb" -sf "#292929" -sb "#4ad6d3" -fn monospace:size=${pixelsize}

