#!/bin/bash

otime_content=""
get_otime() {
    otime_content="otime:=^pa(0;4) ^fg(#ffffff)$(date '+%a,') ^fg()$(date '+W%-W')\n^p1()\n ^fg(#ffffff)$(date '+%-H:%M')\n^pa(0;0) $(date '+%-d. %b')"
}

ofifo=/tmp/ocollector.fifo
while true ; do
    get_otime

    # debug
    # echo "$otime_content"

    echo "$otime_content" > "$ofifo"
    sleep 15
done
