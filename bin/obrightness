#!/bin/bash

ofifo=/tmp/ocollector.fifo

current_brightness=$( xbacklight -get )
current_brightness=${current_brightness%%.*}
if [[ "$1" == "up" ]] ; then
    xbacklight -inc 5
elif [[ "$1" == "down" ]] ; then
    if [[ "$current_brightness" -ge 9 ]] ; then
        xbacklight -dec 5
    fi
fi
current_brightness=$( xbacklight -get )
current_brightness=${current_brightness%%.*}
brightness_pixel=$(( current_brightness*60/100 ))
echo "obrightness:=$brightness_pixel" > "$ofifo"

# debug
#echo "brightness: $1 $current_brightness" >> /tmp/obrightness.log
