#!/bin/bash

if [[ -f ~/.oyay ]] ; then
    . ~/.oyay
    if [[ -n "$oyay" ]] ; then
        OYAY="$oyay"
        echo "using url from oray: '$OYAY'"
        rm ~/.oyay
    else
        echo "fall back to first argument"
        OYAY=$1
    fi
else
    OYAY=$1
    echo "play '$OYAY'"
fi

vurl=$( youtube-dl -f mp4 -g "$OYAY" )
omxplayer -b -o both "$vurl"

